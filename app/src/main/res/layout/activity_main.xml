<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    android:background="@color/backGround"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/delete"
        android:layout_width="@dimen/number_width"
        android:layout_height="@dimen/number_height"
        android:textColor="@color/operation"
        android:background="@color/backGround"
        android:text="AC"
        android:stateListAnimator="@null"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toTopOf="@id/btn_7"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toStartOf="@+id/plus_or_minus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/plus_or_minus"
        android:layout_width="@dimen/number_width"
        android:layout_height="@dimen/number_height"
        android:textColor="@color/operation"
        android:background="@color/backGround"
        android:stateListAnimator="@null"
        android:text="+/-"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toTopOf="@id/btn_8"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toStartOf="@+id/percent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/delete" />

    <Button
        android:id="@+id/percent"
        android:layout_width="@dimen/number_width"
        android:layout_height="@dimen/number_height"
        android:stateListAnimator="@null"
        android:textColor="@color/operation"
        android:background="@color/backGround"
        android:text="%"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toTopOf="@id/btn_9"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toStartOf="@+id/division"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/plus_or_minus" />

    <Button
        android:id="@+id/division"
        android:layout_width="@dimen/number_width"
        android:layout_height="@dimen/number_height"
        android:stateListAnimator="@null"
        android:textColor="@color/operation"
        android:background="@color/backGround"
        android:text="รท"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toTopOf="@id/btn_multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/percent"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btn_7"
        android:layout_width="@dimen/number_width"
        android:layout_height="@dimen/number_height"
        android:stateListAnimator="@null"
        android:textColor="@color/numbers"
        android:background="@color/backGround"
        android:text="7"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/btn_8"
        android:layout_width="@dimen/number_width"
        android:layout_height="@dimen/number_height"
        android:stateListAnimator="@null"
        android:textColor="@color/numbers"
        android:background="@color/backGround"
        android:text="8"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/btn_9"
        android:layout_width="@dimen/number_width"
        android:layout_height="@dimen/number_height"
        android:stateListAnimator="@null"
        android:textColor="@color/numbers"
        android:background="@color/backGround"
        android:text="9"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_multiply"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/btn_multiply"
        android:layout_width="@dimen/number_width"
        android:layout_height="@dimen/number_height"
        android:stateListAnimator="@null"
        android:textColor="@color/operation"
        android:background="@color/backGround"
        android:text="ร"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="@dimen/number_width"
        android:layout_height="@dimen/number_height"
        android:stateListAnimator="@null"
        android:textColor="@color/numbers"
        android:background="@color/backGround"
        android:text="4"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toTopOf="@id/btn_1"
        app:layout_constraintEnd_toStartOf="@+id/btn_5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_7" />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="@dimen/number_width"
        android:layout_height="@dimen/number_height"
        android:stateListAnimator="@null"
        android:textColor="@color/numbers"
        android:background="@color/backGround"
        android:text="5"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toTopOf="@id/btn_2"
        app:layout_constraintEnd_toStartOf="@+id/btn_6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_4"
        app:layout_constraintTop_toBottomOf="@id/btn_8" />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="@dimen/number_width"
        android:layout_height="@dimen/number_height"
        android:stateListAnimator="@null"
        android:textColor="@color/numbers"
        android:background="@color/backGround"
        android:text="6"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toTopOf="@id/btn_3"
        app:layout_constraintEnd_toStartOf="@+id/subtraction"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_5"
        app:layout_constraintTop_toBottomOf="@id/btn_9" />

    <Button
        android:id="@+id/subtraction"
        android:layout_width="@dimen/number_width"
        android:layout_height="@dimen/number_height"
        android:stateListAnimator="@null"
        android:textColor="@color/operation"
        android:background="@color/backGround"
        android:text="-"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toTopOf="@id/plus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_6"
        app:layout_constraintTop_toBottomOf="@id/btn_multiply" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="@dimen/number_width"
        android:layout_height="@dimen/number_height"
        android:stateListAnimator="@null"
        android:textColor="@color/numbers"
        android:background="@color/backGround"
        android:text="1"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toTopOf="@id/btn_zero"
        app:layout_constraintEnd_toStartOf="@+id/btn_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_4" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="@dimen/number_width"
        android:layout_height="@dimen/number_height"
        android:stateListAnimator="@null"
        android:textColor="@color/numbers"
        android:background="@color/backGround"
        android:text="2"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toTopOf="@id/point"
        app:layout_constraintEnd_toStartOf="@+id/btn_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_1"
        app:layout_constraintTop_toBottomOf="@id/btn_5" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="@dimen/number_width"
        android:layout_height="@dimen/number_height"
        android:stateListAnimator="@null"
        android:textColor="@color/numbers"
        android:background="@color/backGround"
        android:text="3"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toTopOf="@id/equals"
        app:layout_constraintEnd_toStartOf="@+id/plus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_2"
        app:layout_constraintTop_toBottomOf="@id/btn_6" />

    <Button
        android:id="@+id/plus"
        android:layout_width="@dimen/number_width"
        android:layout_height="@dimen/number_height"
        android:stateListAnimator="@null"
        android:textColor="@color/operation"
        android:background="@color/backGround"
        android:text="+"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toTopOf="@id/equals"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_9"
        app:layout_constraintTop_toBottomOf="@id/subtraction" />

    <Button
        android:id="@+id/btn_zero"
        android:layout_width="@dimen/number_width"
        android:layout_height="@dimen/number_height"
        android:stateListAnimator="@null"
        android:textColor="@color/numbers"
        android:background="@color/backGround"
        android:text="0"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        app:layout_constraintEnd_toStartOf="@+id/point"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_1" />

    <Button
        android:id="@+id/point"
        android:layout_width="@dimen/number_width"
        android:layout_height="@dimen/number_height"
        android:stateListAnimator="@null"
        android:textColor="@color/numbers"
        android:background="@color/backGround"
        android:text=","
        android:fontFamily="sans-serif"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/equals"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_zero"
        app:layout_constraintTop_toBottomOf="@id/btn_2"
        android:layout_marginBottom="5dp" />

    <Button
        android:id="@+id/equals"
        android:layout_width="@dimen/equal_width"
        android:layout_height="@dimen/number_height"
        android:stateListAnimator="@null"
        android:text="="
        android:textColor="@color/numbers"
        android:background="@color/backGround"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/point"
        app:layout_constraintTop_toBottomOf="@id/plus"
       />

    <TextView
        android:id="@+id/operation"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical|right"
        android:layout_marginLeft="@dimen/margin_port"
        android:layout_marginRight="@dimen/margin_port"
        android:textColor="@color/solution"
        android:fontFamily="sans-serif-light"
        android:textSize="30sp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:textSize="@dimen/textview_text_size"
        android:gravity="center_vertical|end"
        android:text="0"
        android:textColor="@color/numbers"
        android:fontFamily="sans-serif-light"
        android:maxLength="15"
        android:layout_marginLeft="@dimen/margin_port"
        android:layout_marginRight="@dimen/margin_port"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/operation" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/result"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="@dimen/margin_port"
        android:layout_marginRight="@dimen/margin_port"
        android:background="@drawable/gradient_line"/>

</androidx.constraintlayout.widget.ConstraintLayout>